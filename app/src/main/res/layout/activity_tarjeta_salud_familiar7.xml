<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C8E6C9">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="0dp"
        android:showDividers="middle">

    <!-- Título principal -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="36dp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:padding="16dp">

        <TextView
            android:id="@+id/tv_tituloPrincipal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TARJETA DE SALUD FAMILIAR"
            android:textSize="21sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:paddingBottom="12dp"/>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- ENCUESTADORES -->
                <TextView
                    android:text="ENCUESTADORES"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/colorVerdeOlivoOscuro"/>

                <EditText
                    android:id="@+id/encuestadores"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="" />

                <!-- DOCENTE(S) -->
                <TextView
                    android:text="DOCENTE(S)"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/colorVerdeOlivoOscuro"/>

                <EditText
                    android:id="@+id/docentes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="" />

                <!-- GRUPO -->
                <TextView
                    android:text="GRUPO:"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/colorVerdeOlivoOscuro"/>

                <EditText
                    android:id="@+id/grupo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="" />

                <!-- OBSERVACIONES -->
                <TextView
                    android:text="OBSERVACIONES:"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/colorVerdeOlivoOscuro"/>

                <EditText
                    android:id="@+id/observaciones"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:gravity="top"
                    android:background="@android:drawable/edit_text"
                    android:hint="Escriba observaciones aquí" />

                <!-- VULNERABILIDAD FAMILIAR -->
                <TextView
                    android:text="VULNERABILIDAD FAMILIAR:"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/colorVerdeOlivoOscuro"/>

                <EditText
                    android:id="@+id/vulnerabilidad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="" />

                <!-- EDUCACIÓN PARA LA SALUD -->
                <TextView
                    android:text="EDUC. PARA LA SALUD IMPARTIDO:"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/colorVerdeOlivoOscuro"/>

                <EditText
                    android:id="@+id/educ_salud"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="" />

                <!-- ========== SECCIÓN MANZANA ACTUALIZADA ========== -->
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:padding="16dp"
                    android:background="@android:drawable/dialog_holo_light_frame">

                    <TextView
                        android:text="ID del alumno"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:textSize="16sp"
                        android:textColor="@color/colorVerdeOlivoOscuro"/>

                    <EditText
                        android:id="@+id/manzana_num"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:inputType="number"
                        android:hint="" />

                    <!-- NUEVO: Botón para abrir mapa -->
                    <Button
                        android:id="@+id/btnTrazarMapa"
                        android:text="Trazar Manzana en Mapa"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/button_rounded"
                        android:backgroundTint="#4CAF50"
                        android:textColor="@android:color/white" />

                    <!-- NUEVO: Indicador de estado -->
                    <TextView
                        android:id="@+id/tvManzanaStatus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="⚪ Sin trazar"
                        android:textAlignment="center"
                        android:textColor="#999"
                        android:textSize="13sp" />

                </LinearLayout>

                <!-- NOTA -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nota: Realice trazo de manzana, con domicilio encuestado, direcciones y sentido de calles correspondientes. Cuide la limpieza en la TSF."
                    android:layout_marginTop="16dp"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:textColor="#000" />

                <!-- BOTÓN GUARDAR -->
                <Button
                    android:id="@+id/btnGuardarSeccion6"
                    android:text="Guardar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/button_rounded"
                    android:backgroundTint="#6B9963"
                    android:textColor="@android:color/white" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <include
            android:id="@+id/footer"
            layout="@layout/footer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    </LinearLayout>

</ScrollView>
