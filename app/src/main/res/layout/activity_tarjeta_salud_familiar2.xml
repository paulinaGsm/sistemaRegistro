<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C8E6C9">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="0dp"
        android:showDividers="middle">

        <!-- Título principal -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="36dp"
            android:layout_marginTop="30dp"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"
            android:padding="16dp">

            <TextView
                android:id="@+id/tv_tituloPrincipal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TARJETA DE SALUD FAMILIAR"
                android:textSize="21sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:gravity="center"
                android:paddingBottom="12dp"/>
        </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/tv_titulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SECCIÓN II. SANEAMIENTO BASICO"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:textSize="18sp"
            android:gravity="center"
            android:background="#506A32"
            android:padding="8dp"
            android:layout_marginBottom="16dp"/>

        <!-- CARD PRINCIPAL SECCIÓN ================ -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            app:contentPadding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">





                <!-- CAMPOS DEL FORMULARIO -->
                <EditText
                    android:id="@+id/et_dormitorios"
                    android:hint="N° de dormitorios"
                    android:inputType="number"
                    style="@style/FormEditText" />

                <EditText
                    android:id="@+id/et_habitaciones"
                    android:hint="Total de habitaciones"
                    android:inputType="number"
                    style="@style/FormEditText" />

                <EditText
                    android:id="@+id/et_ventanas"
                    android:hint="N° de ventanas"
                    android:inputType="number"
                    style="@style/FormEditText" />

                <EditText
                    android:id="@+id/et_cocina"
                    android:hint="Cocina separada"
                    style="@style/FormEditText" />

                <EditText
                    android:id="@+id/et_combustible"
                    android:hint="Tipo de combustible"
                    style="@style/FormEditText" />

                <EditText
                    android:id="@+id/et_luzelectrica"
                    android:hint="Luz eléctrica"
                    style="@style/FormEditText" />

                <EditText
                    android:id="@+id/et_piso"
                    android:hint="Piso"
                    style="@style/FormEditText" />

                <EditText
                    android:id="@+id/et_paredes"
                    android:hint="Paredes"
                    style="@style/FormEditText" />

                <EditText
                    android:id="@+id/et_techos"
                    android:hint="Techos"
                    style="@style/FormEditText" />

                <EditText
                    android:id="@+id/et_fuenteAgua"
                    android:hint="Fuente de agua"
                    style="@style/FormEditText" />

                <EditText
                    android:id="@+id/et_llegaAgua"
                    android:hint="Cómo llega el agua a casa"
                    style="@style/FormEditText" />

                <EditText
                    android:id="@+id/et_aguaConsumo"
                    android:hint="Agua de consumo humano"
                    style="@style/FormEditText" />

                <EditText
                    android:id="@+id/et_lavaManosComer"
                    android:hint="Lava manos antes de comer"
                    style="@style/FormEditText" />

                <EditText
                    android:id="@+id/et_lavaManosWC"
                    android:hint="Lava manos posterior a WC"
                    style="@style/FormEditText" />

                <EditText
                    android:id="@+id/et_higieneBucal"
                    android:hint="Frecuencia higiene bucal"
                    style="@style/FormEditText" />

                <EditText
                    android:id="@+id/et_bañoCompleto"
                    android:hint="Frecuencia baño completo"
                    style="@style/FormEditText" />

                <EditText
                    android:id="@+id/et_desechoExcretas"
                    android:hint="Manejo desecho excretas"
                    style="@style/FormEditText" />

                <EditText
                    android:id="@+id/et_tratamientoBasura"
                    android:hint="Tratamiento de basura"
                    style="@style/FormEditText" />

                <EditText
                    android:id="@+id/et_faunaNociva"
                    android:hint="Fauna nociva"
                    style="@style/FormEditText" />

                <EditText
                    android:id="@+id/et_animalesDomesticos"
                    android:hint="Animales domésticos"
                    style="@style/FormEditText" />

                <EditText
                    android:id="@+id/et_animalesVacunados"
                    android:hint="Animales vacunados"
                    style="@style/FormEditText" />

                <EditText
                    android:id="@+id/et_expendeProductos"
                    android:hint="Expende productos"
                    style="@style/FormEditText" />

                <EditText
                    android:id="@+id/et_permisosReglamentario"
                    android:hint="Permisos reglamentarios"
                    style="@style/FormEditText" />


                <!-- Botón Guardar -->
                <Button
                    android:id="@+id/btnGuardarSiguiente2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Guardar y Siguiente"
                    android:background="@drawable/button_rounded"
                    android:backgroundTint="#6B9963"
                    android:textColor="@android:color/white" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>
        <include
            android:id="@+id/footer"
            layout="@layout/footer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
</ScrollView>
