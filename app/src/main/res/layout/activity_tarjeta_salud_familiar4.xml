<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C8E6C9">

    <!-- ==================== HEADER ====================
    <include
        android:id="@+id/header"
        layout="@layout/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

        -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="0dp"
        android:showDividers="middle">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="36dp"
            android:layout_marginTop="30dp"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_principal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="TARJETA DE SALUD FAMILIAR"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="21sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/black"
                    android:paddingBottom="12dp"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#C8E6C9">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <!-- ==================== TÍTULO PRINCIPAL ==================== -->
            <TextView
                android:id="@+id/tv_titulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="SECCIÓN IV. ALIMENTACION"
                android:padding="16dp"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:background="#506A32"
                android:elevation="4dp"
                android:layout_marginBottom="24dp" />

            <!-- ==================== CARD: GRUPOS DE ALIMENTOS ==================== -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <!-- Título de la tarjeta -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="GRUPOS DE ALIMENTOS"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:gravity="center"
                        android:textColor="#388E3C"
                        android:paddingBottom="16dp" />

                    <!-- Item 1: Verduras y frutas -->
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#F5F5F5"
                        android:padding="12dp"
                        android:layout_marginBottom="8dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:gravity="center"
                            android:text="1"
                            android:textColor="@android:color/white"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:background="@drawable/circle_green"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Verduras y frutas"
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:paddingStart="12dp"
                            android:paddingEnd="8dp"/>

                        <EditText
                            android:id="@+id/etVerduras"
                            android:layout_width="120dp"
                            android:layout_height="48dp"
                            android:inputType="text"
                            android:hint="Respuesta"
                            android:textSize="14sp"
                            android:background="@drawable/edittext_border"
                            android:padding="8dp"/>
                    </LinearLayout>

                    <!-- Item 2: Cereales -->
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#F5F5F5"
                        android:padding="12dp"
                        android:layout_marginBottom="8dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:gravity="center"
                            android:text="2"
                            android:textColor="@android:color/white"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:background="@drawable/circle_green"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Cereales"
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:paddingStart="12dp"
                            android:paddingEnd="8dp"/>

                        <EditText
                            android:id="@+id/etCereales"
                            android:layout_width="120dp"
                            android:layout_height="48dp"
                            android:inputType="text"
                            android:hint="Respuesta"
                            android:textSize="14sp"
                            android:background="@drawable/edittext_border"
                            android:padding="8dp"/>
                    </LinearLayout>

                    <!-- Item 3: Leguminosas -->
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#F5F5F5"
                        android:padding="12dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:gravity="center"
                            android:text="3"
                            android:textColor="@android:color/white"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:background="@drawable/circle_green"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Leguminosas y alimentos de origen animal"
                            android:textColor="@color/black"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:paddingStart="12dp"
                            android:paddingEnd="8dp"/>

                        <EditText
                            android:id="@+id/etLeguminosas"
                            android:layout_width="120dp"
                            android:layout_height="48dp"
                            android:inputType="text"
                            android:hint="Respuesta"
                            android:textSize="14sp"
                            android:background="@drawable/edittext_border"
                            android:padding="8dp"/>
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- ==================== CARD: HÁBITOS ALIMENTICIOS ==================== -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#FFFFFF">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <!-- Título de la tarjeta -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="HÁBITOS ALIMENTICIOS"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:gravity="center"
                        android:textColor="#388E3C"
                        android:paddingBottom="16dp" />

                    <!-- Garrafones de agua -->
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#E8F5E9"
                        android:padding="12dp"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Garrafones de agua consumidos a la semana"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:paddingBottom="8dp"/>

                        <EditText
                            android:id="@+id/etGarrafones"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:inputType="number"
                            android:hint="Número de garrafones"
                            android:textSize="14sp"
                            android:background="@drawable/edittext_border"
                            android:padding="12dp"/>
                    </LinearLayout>

                    <!-- Número de comidas -->
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#E8F5E9"
                        android:padding="12dp"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Número de comidas al día"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:paddingBottom="8dp"/>

                        <EditText
                            android:id="@+id/etComidasDia"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:inputType="number"
                            android:hint="Número de comidas"
                            android:textSize="14sp"
                            android:background="@drawable/edittext_border"
                            android:padding="12dp"/>
                    </LinearLayout>

                    <!-- Comen viendo TV -->
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#E8F5E9"
                        android:padding="12dp"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="¿Comen viendo televisión?"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:paddingBottom="8dp"/>

                        <EditText
                            android:id="@+id/etTV"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:inputType="text"
                            android:hint="Sí / No / A veces"
                            android:textSize="14sp"
                            android:background="@drawable/edittext_border"
                            android:padding="12dp"/>
                    </LinearLayout>

                    <!-- Se reúnen para comer -->
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#E8F5E9"
                        android:padding="12dp"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="¿Se reúnen para comer?"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:paddingBottom="8dp"/>

                        <EditText
                            android:id="@+id/etReunen"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:inputType="text"
                            android:hint="Sí / No / A veces"
                            android:textSize="14sp"
                            android:background="@drawable/edittext_border"
                            android:padding="12dp"/>
                    </LinearLayout>

                    <!-- Consumen colaciones -->
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#E8F5E9"
                        android:padding="12dp"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="¿Consumen colaciones?"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:paddingBottom="8dp"/>

                        <EditText
                            android:id="@+id/etColaciones"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:inputType="text"
                            android:hint="Sí / No / Tipo de colaciones"
                            android:textSize="14sp"
                            android:background="@drawable/edittext_border"
                            android:padding="12dp"/>
                    </LinearLayout>

                    <!-- Comida más fuerte -->
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#E8F5E9"
                        android:padding="12dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Comida más fuerte del día"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:paddingBottom="8dp"/>

                        <EditText
                            android:id="@+id/etComidaFuerte"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:inputType="text"
                            android:hint="Desayuno / Comida / Cena"
                            android:textSize="14sp"
                            android:background="@drawable/edittext_border"
                            android:padding="12dp"/>
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- ==================== BOTÓN GUARDAR ==================== -->
            <Button
                android:id="@+id/btnGuardarSeccion4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Guardar y Siguiente"
                android:background="@drawable/button_rounded"
                android:backgroundTint="#6B9963"
                android:textColor="@android:color/white" />

        </LinearLayout>
    </ScrollView>

    <include
        android:id="@+id/footer"
        layout="@layout/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>