<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="FormEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:drawable/edit_text</item>
        <item name="android:padding">12dp</item>
        <item name="android:textSize">16sp</item>

    </style>

    <style name="FormLabel">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#333333</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>

    <style name="FormButton">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#333333</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">2dp</item>
    </style>

    <style name="FormFecha">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#424242</item>
        <item name="android:padding">12dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>


<style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
    <!-- Colores principales -->
    <item name="colorPrimary">@color/colorVerdeAzulado</item>
    <item name="colorOnBackground">@color/colorVerdeOlivo</item>
    <item name="colorPrimaryVariant">@color/colorVerdeOlivoOscuro</item>
    <item name="colorOnPrimaryContainer">@color/colorVerdeVerde</item>
    <item name="colorSecondary">@color/colorVerdeMenta</item>
    <item name="android:windowBackground">@color/colorCrema</item>
    <item name="colorControlNormal">@color/colorCremaCrema</item>

    <!-- Texto -->
    <item name="android:fontFamily">@font/fjallaone_regular</item>
    <item name="android:textColor">@color/colorVerdeOlivoOscuro</item>
</style>


    <style name="TableHeaderText">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">12sp</item>
        <item name="android:padding">12dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/table_header_bg</item>
    </style>

    <style name="TableCellText">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">12dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@drawable/table_border</item>
    </style>

    <style name="TableCheckBox">
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/table_border</item>
        <item name="android:padding">8dp</item>
    </style>


    <style name="inicioSesion" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- O usa -->
        <!-- parent="Theme.MaterialComponents.Light.NoActionBar" -->
        <item name="colorPrimary">#6B9963</item>
        <item name="colorPrimaryDark">#506A32</item>
        <item name="colorAccent">#6B9963</item>
    </style>




</resources>